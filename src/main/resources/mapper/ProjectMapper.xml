<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ornament.dao.ProjectDao">

    <select id="getProjects" resultType="com.ornament.domain.Project">
        SELECT * FROM project;
    </select>

    <select id="getProjectByName" resultType="com.ornament.domain.Project">
        SELECT * FROM project WHERE projectName = #{projectName};
    </select>

    <insert id="createMeasure" useGeneratedKeys="true">
        INSERT INTO measure VALUES(
            #{measure.collectionId},
            #{measure.measurePrice},
            #{measure.measureDate},
            0
        );
    </insert>

    <update id="addCollection">
        UPDATE project SET
        projectCollectionValueTotal = projectCollectionValueTotal + #{collectionPrice},
        projectCollectionValueRemain = projectCollectionValueRemain - #{collectionPrice},
        projectCollectionTimes = projectCollectionTimes + 1
        WHERE projectId = #{projectId};
    </update>
</mapper>